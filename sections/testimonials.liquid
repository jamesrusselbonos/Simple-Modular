<div class="page-width" data-section-id="{{ section.id }}" data-section-type="quotes">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h1 style="font-weight: 500;">{{ section.settings.title | escape }}</h1>
      <hr class="hr--small">
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper">
      <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
        <div class="row">
          {% for block in section.blocks %}
            <div class="column width-4"> 
              <div class="quotes-slide--{{ block.id }}" {{ block.shopify_attributes }}>
                <blockquote class="quotes-slider__text text-center">
                  <i style="position: absolute; font-size: 100px; color: rgba(0, 0, 0, 0.1); margin-top: -50px; margin-left: -50px;" class="fa fa-quote-left" aria-hidden="true"></i>
                  {% if block.settings.quote != blank %}
                    <div class="rte-setting rte">{{ block.settings.quote }}</div>
                  {% endif %}
                  {% if block.settings.author != blank %}
                    <span style="width: 100%; text-align: center;"><i class="fa fa-user" aria-hidden="true"></i></span>
                    <p>{{ block.settings.author | escape }}</p>
                  {% endif %}
                </blockquote>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>



